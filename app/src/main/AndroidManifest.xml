<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.medicalrecord.calcprenatal">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:roundIcon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.medicalrecord.calcprenatal.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.medicalrecord.calcprenatal.DoctorDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.medicalrecord.calcprenatal.AddPatientActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.medicalrecord.calcprenatal.OtherInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.medicalrecord.calcprenatal.EditValuesActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_other_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.medicalrecord.calcprenatal.CalculateValuesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.medicalrecord.calcprenatal.AditionalInstrActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>