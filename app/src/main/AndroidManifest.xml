<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dianakarenms.medicalrecord">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DoctorDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AddPatientActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OtherInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.EditValuesActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_other_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CalculateValuesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AditionalInstrActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>