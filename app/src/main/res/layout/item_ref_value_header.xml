<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/calculateValuesWrapper1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/lightDetails"
    android:paddingStart="16dp"
    android:paddingTop="4dp"
    android:paddingEnd="16dp"
    android:paddingBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/itemRefValueHeaderTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:text="@string/calculate_values_solution" />

    <Button
        android:id="@+id/itemRefValueHeaderCollapseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape_rounded_square_gray"
        android:text="@string/calculate_values_collapse"
        android:textColor="@color/lightBtnTxt" />
</RelativeLayout>